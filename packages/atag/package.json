{
  "name": "atag",
  "version": "0.1.0",
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "react-scripts build",
    "fix-lint": "yarn lint --fix",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "@types/jest": "^24",
    "@types/node": "^12",
    "@types/react": "^16",
    "@types/react-dom": "^16",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "rebass": "^4",
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2",
    "@typescript-eslint/parser": "^2",
    "@will-stone/prettier-config": "^1",
    "eslint": "^6",
    "eslint-config-prettier": "^6",
    "eslint-config-react": "^1",
    "eslint-config-react-app": "^5",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-simple-import-sort": "^2",
    "prettier": "^1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jasmine": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "prettier/prettier": "error",
      "simple-import-sort/sort": "error"
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    }
  }
}
